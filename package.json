{
  "name": "ts-express-starter",
  "version": "1.0.0",
  "description": "TS Module Starter",
  "main": "lib/index.js",
  "scripts": {
    "start": "npm run build",
    "test": "jest",
    "test-with-watch": "jest --watch",
    "coverage": "jest --coverage",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "fix": "tslint -p tsconfig.json --fix",
    "prepare": "npm run build"
  },
  "author": "Peter Iyiola",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  },
  "dependencies": {},
  "files": [
    "lib/**/*"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run lint",
      "prettier --write",
      "git add",
      "npm run build"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
